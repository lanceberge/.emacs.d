# key: genserver
# name: genserver
# --
# -*- mode: snippet -*-
# name: GenServer module boilerplate
# key: genserver
# --

defmodule `(+elixir--module-name-from-file)` do
  use GenServer

  def start_link(_) do
    GenServer.start_link(__MODULE__, %{}, name: __MODULE__)
  end

  def init(state) do
    {:ok, state}
  end

  def get_$1() do
    GenServer.call(__MODULE__, :get_$1)
  end

  def handle_call(:get_$1, _from, state) do
    {:reply, state[$2], state}
  end
end